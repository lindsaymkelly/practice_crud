<h1> Current Posts: </h1>
<%= link_to 'Create New Post', new_post_path %>

<% @posts.each do |post| %>
  <div>
    <h2><%= post.title %></h2>
    <h3> Written by: <%= post.author.username %></h3>
    <p><%= link_to 'Read Post', post_path(post) %></p>
    <p><%= link_to 'Edit Post', edit_post_path(post) %></p>
  </div>
<% end %>